FROM --platform=linux/amd64 maven:3.9.6-eclipse-temurin-21

# Set working directory
WORKDIR /app

# Install Chrome browser and dependencies
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    unzip \
    curl \
    fonts-liberation \
    libappindicator3-1 \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libcups2 \
    libdbus-1-3 \
    libgdk-pixbuf2.0-0 \
    libnspr4 \
    libnss3 \
    libx11-xcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxrandr2 \
    xdg-utils \
    libu2f-udev \
    libvulkan1 \
    && rm -rf /var/lib/apt/lists/*

# Add Google Chrome APT repo and install Chrome
RUN curl -fsSL https://dl.google.com/linux/linux_signing_key.pub | gpg --dearmor -o /usr/share/keyrings/google.gpg && \
    echo "deb [arch=amd64 signed-by=/usr/share/keyrings/google.gpg] http://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list && \
    apt-get update && \
    apt-get install -y google-chrome-stable && \
    rm -rf /var/lib/apt/lists/*

# Add these lines after WORKDIR /app and before COPY . .
RUN java -version
RUN mvn -version
RUN echo $JAVA_HOME

# Set Chrome binary path for Selenium (optional, but safe)
ENV CHROME_BIN=/usr/bin/google-chrome

# Copy your code into the container
COPY . .

# Run Spring Boot app
CMD ["mvn", "spring-boot:run"]
